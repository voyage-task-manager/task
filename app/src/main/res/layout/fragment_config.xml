<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.felipe.app.voyage.example.felipe.app.ConfigFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="0.14in"
        android:paddingTop="0.16in"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inactve_days"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/days_active"
            android:orientation="horizontal"
            android:layout_marginTop="0.05in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_hour"
            android:layout_marginTop="0.12in"
            android:layout_marginBottom="0.05in"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:paddingTop="0.05in"
            android:paddingBottom="0.05in"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="0.11in"
                android:layout_weight="1"
                android:layout_width="0.8in"
                android:layout_height="wrap_content"
                android:text="Despertar às: " />

            <TextView
                android:id="@+id/settings_wake"
                android:textSize="0.11in"
                android:layout_marginTop="0.005in"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="08:00"/>

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="0.05in"
            android:paddingTop="0.05in"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="0.11in"
                android:layout_weight="1"
                android:layout_width="0.8in"
                android:layout_height="wrap_content"
                android:text="Almoçar às: " />

            <TextView
                android:id="@+id/settings_lunch"
                android:textSize="0.11in"
                android:clickable="true"
                android:layout_marginTop="0.005in"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="12:00"/>

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="0.05in"
            android:paddingTop="0.05in"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="0.11in"
                android:layout_weight="1"
                android:layout_width="0.8in"
                android:layout_height="wrap_content"
                android:text="Jantar às: " />

            <TextView
                android:id="@+id/settings_dinner"
                android:textSize="0.11in"
                android:clickable="true"
                android:layout_marginTop="0.005in"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="19:00"/>

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="0.05in"
            android:paddingTop="0.05in"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="0.11in"
                android:layout_weight="1"
                android:layout_width="0.8in"
                android:layout_height="wrap_content"
                android:text="Dormir às: " />

            <TextView
                android:id="@+id/settings_sleep"
                android:textSize="0.11in"
                android:layout_marginTop="0.005in"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:clickable="true"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="23:00"/>

        </LinearLayout>

        <!--<TextView
            android:padding="0.1in"
            android:layout_marginTop="0.05in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/outlined_button"/> -->

    </LinearLayout>



</FrameLayout>
