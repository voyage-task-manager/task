<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="voyage.task.zerodois.app">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="voyage.task.zerodois.app.MainActivity" />
        <activity android:name="voyage.task.zerodois.app.LogInActivity" />
        <activity
            android:name="voyage.task.zerodois.app.TabActivity"
            android:screenOrientation="portrait" />
        <activity android:name="voyage.task.zerodois.app.CreateEvent" />
        <activity android:name="voyage.task.zerodois.app.EventActivity" />
        <activity android:name="voyage.task.zerodois.app.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>